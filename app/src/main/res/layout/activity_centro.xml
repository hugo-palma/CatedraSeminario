<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cardview_light_background"
    tools:context="com.palma.hugo.catedraseminario.CentroActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/titulo_centro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#AA000000"
                android:padding="16dp"
                android:text="Titulo"

                android:textColor="@color/cardview_light_background"
                android:textSize="14sp"
                android:textStyle="bold" />

            <android.support.v7.widget.CardView
                android:id="@+id/centro_turistico"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="5dp"
                android:elevation="10dp"
                app:cardCornerRadius="5dp"
                >
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="10dp"
                    android:layout_gravity="center_horizontal">
                    <android.support.v7.widget.AppCompatImageView
                        android:id="@+id/imagen_centro"
                        android:layout_width="match_parent"
                        android:layout_height="250dp"
                        android:layout_gravity="center"
                        android:scaleType="centerCrop"/>
                    <LinearLayout
                        android:id="@+id/linearLayout_centro_turistico_titulo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left|bottom"
                        android:background="#88000000"
                        android:orientation="vertical"
                        >
                    </LinearLayout>
                </FrameLayout>
            </android.support.v7.widget.CardView>

            <TextView
                android:id="@+id/textView_Descipcion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Descripcion"
                android:padding="16dp"
                />
        </LinearLayout>
    </ScrollView>



</android.support.design.widget.CoordinatorLayout>
